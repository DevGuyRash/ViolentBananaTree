{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "allowJs": false,
    "baseUrl": ".",
    "types": []
  },
  "include": ["packages/**/*.ts", "packages/**/*.json"],
  "exclude": ["node_modules"]
}
